extends ../base

block body 
    div 
        p 이미 계정이 있으십니까?
        p    
            a(href="/login") Login &rarr;
            
    if errorMsg
        span(class="error_msg") #{errorMsg}  
    form(action="", method="POST")
        label(for="email") 이메일 
        input(name="email" type="email", placeholder="xxxx@xxxx.xxx", required)
        label(for="password") 비밀번호
        input(name="password" type="password", required) 
        label(for="password2") 비밀번호 확인
        input(name="password2" type="password", required) 
        hr
        label(for="name") 이름
        input(name="name" type="text", minLength=2, maxLength=8, required) 
        label(for="gender") 성별
        select(name="gender", required)
            option(value="male") 남자  
            option(value="female") 여자
        label(for="birth") 생년월일
        input(id="birth" name="birth" type="text", placeholder="ex) 0109",minLength=4, maxLength=4, required)
        input(type="submit" value="Join")