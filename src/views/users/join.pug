extends ../base

block body 
    div.account__div
            span 계정이 이미 있으신가요?
            span.account__text   
                a(href="/login") 이메일로 시작하기 &rarr;
            
    if errorMsg
        span(class="error_msg") #{errorMsg}  
    form(action="", method="POST")
        input(id="email", name="email" type="email", placeholder="이메일", required)
        input(name="password" type="password", placeholder="비밀번호 (6자 이상)", required) 
        input(name="password2" type="password", placeholder="비밀번호 확인", required) 
        hr
        input(name="name" type="text", minLength=2, maxLength=8, placeholder="이름", required) 
        select(id="gender", name="gender", required)
            option(value=null) 성별 선택안함
            option(value="male") 남자 🙋🏻‍♂️ 
            option(value="female") 여자 🙋🏻‍♀️
        input(id="birth" name="birth" type="text", placeholder="생년월일 (4자)",minLength=4, maxLength=4, required)
        input(type="submit" value="회원가입")
        include ../partials/social-login