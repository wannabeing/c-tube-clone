extends ../base

block body 
    form(id="upload", method="post") 
        input(name="title" type="text", placeholder="비디오 제목", required, value=video.title)
        select(name="category" id="category" data-select=video.category)
            option(value="Sel1") Sel1 
            option(value="Sel2") Sel2
            option(value="Sel3") Sel3 
            option(value="Sel4") Sel4
        input(name="description" type="text", placeholder="비디오 설명", minLength=5, required, value=video.description)
        input(name="hashtags" type="text", placeholder="해시태그", required, value=video.hashtags.join())
        input(type="submit", value="Upload")   
    if errorMsg
        span(class="error_msg") 다시 입력해주세요.
    
block scripts
